{
    "name": "matthiasnoback/leanpub-api-client",
    "description": "A PHP client for the Leanpub API",
    "authors": [
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "https://matthiasnoback.nl"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "beberlei/assert": "^3.2",
        "thecodingmachine/safe": "^1.1",
        "psr/http-message": "^1.0",
        "php-http/client-implementation": "^1.0",
        "php-http/httplug": "^2.0",
        "php-http/message-factory": "^1.0",
        "php-http/discovery": "^1.0",
        "ext-json": "*",
        "php-http/message": "^1.8",
        "symfony/console": "^5.1",
        "symfony/dotenv": "^5.1",
        "php-http/logger-plugin": "^1.1"
    },
    "license": "MIT",
    "require-dev": {
        "php-http/guzzle6-adapter": "^2.0",
        "symfony/var-dumper": "^5.1",
        "phpstan/phpstan": "^0.12.28",
        "phpstan/phpstan-beberlei-assert": "^0.12.2",
        "phpstan/phpstan-phpunit": "^0.12.11",
        "phpunit/phpunit": "^8.0",
        "matthiasnoback/phpunit-asynchronicity": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "LeanpubApi\\": "src/LeanpubApi/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IntegrationTests\\": "integration-tests/"
        }
    },
    "bin": ["leanpub.php"]
}
